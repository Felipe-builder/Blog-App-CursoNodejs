<h1>{{categoria.nome}}</h1>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>Descrição: {{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Data de publicação: {{data}}</small>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}